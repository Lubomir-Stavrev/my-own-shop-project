    <td></td>
    <td></td>
    <td >
  <h1 >The cart is Empty !</h1>

    </td>
<td></td>
    <td></td>
    <td></td>
    </td>

  </tr>
  {{/each}}
  

</tbody>
    </table>
  <a href="/home" onclick="navigateHandler(event)">
    <button class="back-Button">Back</button>
  </a>
    
  <a onclick="navigateHandler(event)" href="/paymentPage">
