{{> header}}
<div>
    <h1 class="page-Title">Products</h1>
    <div class="custom-Line"></div>
    
    <div class="posts" onclick="navigateHandler(event)">
        {{#each products}}
                <div onclick="navigateHandler(event)" class="post">

    <h1>{{title}} </h1>
    <a href="/details/{{productId}}">

                    <img class="product-Image" src={{image}} alt="">
    </a>
    <h1>Price: {{price}}lv.</h1>
                     <a href="/details/{{productId}}">
                       <button class="custom-Button">
                            Details
                       </button>
                     </a>
                </div>
{{else}}
<h1>There are no products here...</h1>
{{/each}}
</div>

{{> footer}}